
While 1

	Input("Type \"Hello\" or \"Hi\".", "OR Test")

	If @status = -1 Then
		Exit
	End If

	StringUpper(@return)

	If @return = "HELLO" Or @return = "HI" Then
		MsgBox(64, "Hello!", "OR Test")
		Exit
	Else
		MsgBox(16, "You didn't say \"Hello\" or \"Hi\".\nWhy don't you try again?", "OR Test")
	End if

WEnd
