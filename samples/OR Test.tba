
While True

	ret$ = Input("Type \"Hello\" or \"Hi\".", "OR Test")

	If @err = -1 Then
		Exit
	End If

	If ret$ = "HELLO" Or ret$ = "HI" Then
		MsgBox(64, "Hello!", "OR Test")
		Exit
	Else
		MsgBox(16, "You didn't say \"Hello\" or \"Hi\".\nWhy don't you try again?", "OR Test")
	End if

WEnd
