first$ = new MyMessage("This is an object-oriented program")
second$ = new MyMessage("Hello, World!")
second$.ShowMsg()
first$.ShowMsg()

class MyMessage
	dim title$ = "Class Objects"
	dim mystr$
	
	MyMessage(msg$)
		mystr$ = msg$
	end function
	
	function ShowMsg()
		MsgBox(64, "The message is: " + mystr$, title$)
	end function
	
end class
